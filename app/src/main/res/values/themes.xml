<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KataKerjaApps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/salmon</item>
        <item name="colorSecondaryVariant">@color/salmon_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="n">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Splash Screen Theme-->
    <style name="SplashTheme" parent="Theme.KataKerjaApps">
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
    </style>


    <!--  TEXT STYLES  -->
    <style name="TextStyles" parent="Widget.AppCompat.TextView" />

    <style name="TextStyles.PoppinsLarge">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyles.PoppinsLarge.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextStyles.PoppinsRegular">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyles.PoppinsRegular.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <!--  BUTTON STYLES -->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/salmon</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/shape_rec_fill_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/shape_rec_outline_blue</item>
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>